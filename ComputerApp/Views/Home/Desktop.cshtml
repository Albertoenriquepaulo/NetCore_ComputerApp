@model List<Computer>
@{
    ViewData["Title"] = "Desktop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Build Your Desktop</h1>

<div class="row">
    @if (ViewBag.isDesktop)
    {
        <div class="col-md-3 col-sm-6 d-flex align-items-stretch">
            @*<div class="card" style="width: 18rem;">*@
            <div class="card ml-5 text-center bg-transparent col-md-12" style="width: 20rem;">
                <img src="https://c1.neweggimages.com/NeweggImage/ProductImage/83-221-575-V09.jpg" class="card-img-top" alt="Show details for build your own computer" height="200">
                <div class="card-body">
                    @*<h5 class="card-title"><a asp-controller="Computers" asp-action="BuildComputer">Build your own computer</a></h5>*@
                    <h5 class="card-title"><a class="btn btn-primary text-light" asp-controller="Computers" asp-action="BuildComputer">Build your own computer</a></h5>
                    @*<p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>*@
                    @*<a href="#" class="btn btn-primary">Add to Cart</a>*@
                </div>
            </div>
        </div>
    }

    @foreach (Computer computerItem in Model)
    {
        <div class="col-md-3 col-sm-6 d-flex align-items-stretch">
            @*<div class="card" style="width: 18rem;">*@
            <div class="card ml-5 text-center bg-transparent col-md-12" style="width: 30rem;">
                <img src="@computerItem.ImgUrl" class="card-img-top" alt="Show details for build your own computer" height="200">
                <div class="card-body">
                    <h5 class="card-title text-secondary">@computerItem.Name</h5>
                    <p class="card-text">Price: <strong>@computerItem.Price</strong></p>
                    <a class="btn btn-primary text-light">Add to Cart</a>
                </div>
            </div>
        </div>
    }
</div>
